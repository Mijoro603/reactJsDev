{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**/*"],
		"excludes": ["node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"quoteStyle": "double"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"useButtonType": "error"
			},
			"recommended": true,
			"style": {
				"noDuplicateSelectors": "error",
				"noInvalidHex": "error"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "warn"
			}
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
