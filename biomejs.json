{
    "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
    "files": {
      "ignoreUnknown": false,
      "include": ["src"],
      "exclude": ["node_modules"]
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "correctness": {
          "noUnusedImports": "error",
          "noUnusedVariables": "error",
          "useExhaustiveDependencies": "warn"
        }
      }
    },
    "assist": {
      "enabled": true,
      "actions": {
        "source": {
          "organizeImports": "on"
        }
      }
    }
  }
  